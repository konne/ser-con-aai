<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <RootNamespace>Ser.ConAai</RootNamespace>
    <Authors>Konrad Mattheis und Martin Berthold</Authors>
    <Copyright>Copyright (c) 2018</Copyright>
    <Company>senseexcel</Company>
    <Configuration>Release</Configuration>
    <Version>1.0.1</Version>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BouncyCastle.NetCore" Version="1.8.1.3" />
    <PackageReference Include="GitVersionTask" Version="4.0.0-beta0008" />
    <PackageReference Include="Hjson" Version="3.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="NLog" Version="5.0.0-beta11" />
    <PackageReference Include="PeterKottas.DotNetCore.WindowsService" Version="2.0.6" />   
    <PackageReference Include="qlik-sseapi" Version="1.0.0" />   
    <PackageReference Include="SerApi" Version="2.0.7" />    
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="5.2.1" />
    <PackageReference Include="WebSocket4Net" Version="0.15.2" />
  </ItemGroup>  

  <Choose>
    <When Condition="'$(Configuration)' == 'Release'">
      <ItemGroup>
        <PackageReference Include="SerApi" Version="2.0.7" />
        <PackageReference Include="Q2gHelperPem" Version="1.0.3" />
        <PackageReference Include="Q2gHelperQrs" Version="1.0.10" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <Reference Include="Q2gHelperPem">
          <HintPath>..\..\q2g-helper-pem-nuget\src\bin\Debug\netcoreapp2.0\Q2gHelperPem.dll</HintPath>
        </Reference>
      </ItemGroup>
      <ItemGroup>
        <Reference Include="Q2gHelperQrs">
          <HintPath>..\..\q2g-helper-qrs-nuget\src\bin\Debug\netcoreapp2.0\Q2gHelperQrs.dll</HintPath>
        </Reference>
      </ItemGroup>
    </Otherwise>
  </Choose>  

  <ItemGroup>
    <Reference Include="SerApi">
      <HintPath>..\..\ser-api-nuget\src\bin\Debug\netcoreapp2.0\SerApi.dll</HintPath>
    </Reference>
    <Reference Include="SerDistribute">
      <HintPath>..\..\ser-distribute-nuget\src\bin\Debug\netcoreapp2.0\SerDistribute.dll</HintPath>
    </Reference>
  </ItemGroup>
  
  <ItemGroup>
    <None Update="App.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="config.hjson.example">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
